#!/usr/local/bin/gmake -f#kies tussen 'appletviewer', 'java', of 'echo'JAVA=appletviewerJAVA=echo#kies tussen 'javac' of een andere java compilerJAVAC=javac#JFLAGS=-O#kies tussen 'package.Main','file.html' of 'klaar'MAIN=Test.html#The path for all java filesVPATH := .:text:shared############# vanaf hier niets meer invullen##empty:=comma:= ,space:= $(empty) $(empty)dirs := $(subst :,$(space),$(VPATH))SRCS:= $(foreach dir,$(dirs),$(wildcard $(dir)/*.java))# Now, given these sources we want to compute the class file namesCLASSES:= $(addsuffix .class, $(basename $(SRCS)))#Now we can compute our dependenciesall:  $(CLASSES)	$(JAVA) $(MAIN)%.class:%.java	$(JAVAC) $(JFLAGS) $<